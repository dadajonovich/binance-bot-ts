{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["es2021"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["/**/*.ts"],
  "exclude": ["node_modules"]
}
